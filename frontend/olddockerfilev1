FROM ubuntu:22.04

# Install curl, git, build tools, python3
RUN apt-get update && \
    apt-get install -y curl git build-essential python3 make && \
    curl -fsSL https://deb.nodesource.com/setup_22.x | bash - && \
    apt-get install -y nodejs && \
    apt-get clean

# Set work directory
WORKDIR /app

# Copy package files first (better caching)
COPY package*.json ./

# Install npm dependencies
RUN npm install

# Copy rest of the app
COPY . .

# Expose port
EXPOSE 3000

# Start app
CMD ["npm", "start"]


